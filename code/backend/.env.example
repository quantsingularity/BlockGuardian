# BlockGuardian Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
FLASK_APP=src.main:create_app
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/blockguardian
SQLALCHEMY_DATABASE_URI=postgresql://username:password@localhost:5432/blockguardian
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000
JWT_ALGORITHM=HS256

# Security Configuration
BCRYPT_LOG_ROUNDS=12
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@blockguardian.com

# External API Keys
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
POLYGON_API_KEY=your-polygon-api-key
FINNHUB_API_KEY=your-finnhub-api-key
QUANDL_API_KEY=your-quandl-api-key

# Blockchain Configuration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-infura-project-id
ETHEREUM_NETWORK=mainnet
PRIVATE_KEY=your-ethereum-private-key
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Compliance Configuration
KYC_PROVIDER=jumio
KYC_API_KEY=your-kyc-api-key
KYC_API_SECRET=your-kyc-api-secret
AML_PROVIDER=chainalysis
AML_API_KEY=your-aml-api-key

# File Storage Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/blockguardian.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=8000

# Rate Limiting Configuration
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=1000 per hour

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Testing Configuration
TESTING=False
TEST_DATABASE_URL=sqlite:///test.db

# Production Configuration
GUNICORN_WORKERS=4
GUNICORN_BIND=0.0.0.0:5000
GUNICORN_TIMEOUT=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Session Configuration
SESSION_TYPE=redis
SESSION_REDIS=redis://localhost:6379/4
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True
SESSION_KEY_PREFIX=blockguardian:

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/5
CACHE_DEFAULT_TIMEOUT=300

# Regulatory Reporting Configuration
FINCEN_API_KEY=your-fincen-api-key
FINCEN_ENVIRONMENT=sandbox
CTR_THRESHOLD=10000
SAR_THRESHOLD=5000

# Risk Management Configuration
MAX_DAILY_TRANSACTION_AMOUNT=50000
MAX_MONTHLY_TRANSACTION_AMOUNT=500000
HIGH_RISK_COUNTRIES=AF,BY,MM,KP,IR,IQ,LB,LY,ML,NI,SO,SD,SY,UA,VE,YE,ZW
PEP_SCREENING_ENABLED=True

# Document Verification Configuration
DOCUMENT_VERIFICATION_PROVIDER=onfido
ONFIDO_API_KEY=your-onfido-api-key
ONFIDO_WEBHOOK_TOKEN=your-onfido-webhook-token

# Sanctions Screening Configuration
SANCTIONS_SCREENING_PROVIDER=dow_jones
DOW_JONES_API_KEY=your-dow-jones-api-key
OFAC_API_KEY=your-ofac-api-key

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Health Check Configuration
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_ENDPOINT=/health

# Feature Flags
ENABLE_MFA=True
ENABLE_BIOMETRIC_AUTH=False
ENABLE_ADVANCED_ANALYTICS=True
ENABLE_REAL_TIME_MONITORING=True
ENABLE_AUTOMATED_REPORTING=True
