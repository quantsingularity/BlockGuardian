# ==============================================================================
# BlockGuardian Environment Configuration
# ==============================================================================

# ------------------------------------------------------------------------------
# 1. Core Application and Flask Settings
# ------------------------------------------------------------------------------
# A secret key for the Flask application and session management.
SECRET_KEY="your_flask_secret_key_here"

# Flask environment (e.g., development, production, testing)
FLASK_ENV="development"

# Application logging level (e.g., DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# Log format (e.g., "json", "text")
LOG_FORMAT="json"

# CORS origins (comma-separated list of allowed domains)
CORS_ORIGINS="*"


# ------------------------------------------------------------------------------
# 2. Database and Caching Configuration
# ------------------------------------------------------------------------------
# Database connection URL (e.g., postgresql://user:pass@host:port/db)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/blockguardian"

# Redis URL for caching and rate limiting (e.g., redis://localhost:6379/0)
REDIS_URL="redis://localhost:6379/0"

# Rate limit storage URL (often the same as REDIS_URL, but can be different)
RATELIMIT_STORAGE_URL="redis://localhost:6379/1"

# Database connection pool settings
DB_POOL_SIZE="20"
DB_MAX_OVERFLOW="30"
DB_POOL_TIMEOUT="30"
DB_POOL_RECYCLE="3600"
DB_ECHO="false" # Set to "true" to log all SQL queries


# ------------------------------------------------------------------------------
# 3. Authentication and Security
# ------------------------------------------------------------------------------
# A secret key for signing JSON Web Tokens (JWTs).
JWT_SECRET_KEY="your_jwt_signing_secret_here"

# JWT access token expiration time in hours
JWT_ACCESS_EXPIRES_HOURS="1"

# JWT refresh token expiration time in days
JWT_REFRESH_EXPIRES_DAYS="30"

# Key used for general data encryption (e.g., Fernet key)
ENCRYPTION_KEY="your_general_encryption_key"

# Number of rounds for password hashing (e.g., 12)
PASSWORD_HASH_ROUNDS="12"

# Maximum number of failed login attempts before lockout
MAX_LOGIN_ATTEMPTS="5"

# Lockout duration in minutes
LOCKOUT_DURATION_MINUTES="30"

# Session timeout in hours
SESSION_TIMEOUT_HOURS="8"


# ------------------------------------------------------------------------------
# 4. External API Keys
# ------------------------------------------------------------------------------
INFURA_API_KEY=""
ETHERSCAN_API_KEY=""
COINMARKETCAP_API_KEY=""
ALPHA_VANTAGE_API_KEY=""
POLYGON_API_KEY=""

# Rate limit for external API calls per minute
API_RATE_LIMIT_PER_MINUTE="60"


# ------------------------------------------------------------------------------
# 5. Blockchain Configuration
# ------------------------------------------------------------------------------
# Default blockchain network (e.g., "ethereum", "polygon", "binance")
DEFAULT_BLOCKCHAIN_NETWORK="ethereum"

# Default gas limit for transactions
GAS_LIMIT="500000"

# Default gas price in GWEI
GAS_PRICE_GWEI="20"

# Number of blocks to wait for transaction confirmation
CONFIRMATION_BLOCKS="12"


# ------------------------------------------------------------------------------
# 6. Compliance and Monitoring
# ------------------------------------------------------------------------------
# Enable/Disable Know Your Customer (KYC) checks ("true" or "false")
KYC_ENABLED="true"

# Enable/Disable Anti-Money Laundering (AML) checks ("true" or "false")
AML_ENABLED="true"

# Audit log retention period in days
AUDIT_LOG_RETENTION_DAYS="2555"

# Enable/Disable transaction reporting ("true" or "false")
TRANSACTION_REPORTING_ENABLED="true"

# General data retention period in days
DATA_RETENTION_DAYS="2555"

# Enable/Disable GDPR compliance features ("true" or "false")
GDPR_COMPLIANCE="true"

# Enable/Disable metrics collection ("true" or "false")
METRICS_ENABLED="true"

# Enable/Disable distributed tracing ("true" or "false")
TRACING_ENABLED="true"

# Health check interval in seconds
HEALTH_CHECK_INTERVAL="30"

# Webhook URL for sending alerts
ALERT_WEBHOOK_URL=""
