# BlockGuardian Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

# AWS Configuration
aws_region = "us-west-2"

# Environment
environment = "dev"  # Options: dev, staging, prod

# Application
app_name = "blockguardian"

# Network Configuration
vpc_cidr = "10.0.0.0/16"

availability_zones = [
  "us-west-2a",
  "us-west-2b",
  "us-west-2c"
]

public_subnet_cidrs = [
  "10.0.1.0/24",
  "10.0.2.0/24",
  "10.0.3.0/24"
]

private_subnet_cidrs = [
  "10.0.4.0/24",
  "10.0.5.0/24",
  "10.0.6.0/24"
]

# Compute Configuration
instance_type = "t3.micro"  # Adjust for production: t3.medium or larger
key_name      = null        # Set to your SSH key pair name or leave null

# Database Configuration
db_instance_class = "db.t3.micro"  # Adjust for production: db.t3.medium or larger
db_name           = "blockguardian"

# IMPORTANT: Set these via environment variables or use AWS Secrets Manager
# Never commit actual credentials to version control
# export TF_VAR_db_username="your_db_user"
# export TF_VAR_db_password="your_secure_password"
db_username = "admin"               # Change this!
db_password = "CHANGE_ME_INSECURE"  # Use strong password or env var!

# Tags
default_tags = {
  Terraform   = "true"
  Project     = "BlockGuardian"
  Environment = "dev"
  ManagedBy   = "terraform"
  Owner       = "devops-team"
}
